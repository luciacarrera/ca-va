<div class="flex flex-col gap-0 text-justify">
  <div class="flex justify-between gap-0">
    <dt class="pl-1 font-semibold">
      {{ details.title }}
    </dt>
    {{#if details.date }}
    <dd class="pr-1">
      {{ details.date }}
    </dd>
    {{/if}}
  </div>
  {{#if details.subtitle }}
  <dd class="px-1">
    {{ details.subtitle }}
  </dd>
  {{/if}} 
  {{#if details.nestedDetails }} 
  {{#each details.nestedDetails }}
  <dd>
   {{> simpleDetails details=this }}
  </dd>
  {{/each}} 
  {{/if}}
</div>