{
  "name": "aesthetic-curriculum-accessibility-vitae",
  "version": "1.0.0",
  "description": "Aesthetic &amp; Accessible CVs.",
  "main": "index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./out/tailwind.css --minify",
    "build:html": "tsx src/scripts/generate-html.ts",
    "build:pdf": "tsx src/scripts/generate-pdf.ts",
    "pdf": "bash -lc 'npm run build:css && npm run build:html -- \"$@\" && npm run build:pdf -- \"$@\"' --",
    "pdf:custom": "npm run build:css && npm run build:html",
    "format": "prettier --write \"src/**/*.{hbs,handlebars,html,css,js,ts,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luciacarrera/aesthetic-curriculum-accessibility-vitae.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/luciacarrera/aesthetic-curriculum-accessibility-vitae/issues"
  },
  "homepage": "https://github.com/luciacarrera/aesthetic-curriculum-accessibility-vitae#readme",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "handlebars": "^4.7.8",
    "prince": "^1.14.3"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/handlebars": "^4.0.40",
    "@types/node": "^25.0.3",
    "@types/postcss-safe-parser": "^5.0.4",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "postcss-safe-parser": "^7.0.1",
    "postcss-selector-parser": "^7.1.1",
    "prettier": "^3.7.4",
    "prettier-plugin-handlebars": "^0.0.1",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
